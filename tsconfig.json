{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "src/types/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "**/*_backup.ts",
    "**/*_backup.js",
    "**/*_broken.ts",
    "**/*_broken.js",
    "**/*_clean.ts",
    "**/*_clean.js",
    "**/*.backup",
    "**/*.bak"
  ]
}