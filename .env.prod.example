# Production Environment Variables
# Copy this file to .env.prod and modify values as needed

# Application
NODE_ENV=production
API_PORT=8889
LOG_LEVEL=info

# Database
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=gamecast
MYSQL_USER=gamecast_user
MYSQL_PASSWORD=your_secure_mysql_password_here
MYSQL_PORT=3306

# Redis
REDIS_PORT=6379

# Security
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
SESSION_SECRET=your_super_secure_session_secret_key_here_minimum_32_characters

# CORS & Frontend
FRONTEND_URL=https://your-frontend-domain.com
CORS_ORIGIN=https://your-frontend-domain.com,https://your-admin-domain.com

# Nginx
HTTP_PORT=80
HTTPS_PORT=443

# AWS/Cloud specific (optional)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
